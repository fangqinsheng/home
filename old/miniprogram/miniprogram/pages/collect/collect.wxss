/* pages/collect/collect.wxss */

.form {
  display: block;
  margin-top: 70rpx;
}

.form .item {
  position: relative;
  padding: 0 20rpx;
  overflow: hidden;
  /* width: 100%; */
  background-color: #fff;
  margin-bottom: 24rpx;
}

.form .label {
  float: left;
  width: 180rpx;
   height: 90rpx;
  line-height: 90rpx;
}
.form .required:before {content: "*"; color: #e60012; margin-left: -6px; }

.form .input {
  float: left;
  width: 530rpx;
  height: 90rpx;
  line-height: 90rpx;
}

.form .input input {
  height: 90rpx;
  line-height: 90rpx;
}

.form .submit-btn {
  background-color: #2259BD;
  color: #fff;
  margin: 100rpx 20rpx 50rpx;
}

.form .valid-btn {
  position: absolute;
  right: 0;
  top: 0;
  color: #2259BD;
  border-left: 1px solid #e3e4e5;
  width: 280rpx;
  text-align: center;
  z-index: 3
}

button[disabled]:not([type])  {
  color: #fff;
  background-color: #2259BD;
}

button[disabled] {
  color: rgba(255,255,255,.6);
}


.form .item .picker { line-height: 90rpx; height: 90rpx; color: #777; }

.tips {
  padding: 0 20rpx;
}

.tips text { color: #E64340; font-size: 24rpx; }

.block {
  position: absolute;
  top: 0;
  left: 0;
  background-color: #f6f6f6;
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
}

.err-msg {
  position: absolute;
  top: 0;
  left: 0;
  background-color: #E64340;
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  transform: translate(0 , -70rpx);
  transition: all 0.2s ease;
}

.err-msg.active {
 transform: translate(0 , 0)
}

.err-msg text {
  color: #fff;
}

/* 页脚 */
.site-footer {
  font-size: 24rpx;
  color: #ddd;
  text-align: center;
}